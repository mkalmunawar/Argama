<%- include('../../partials/header'); %>
<% if (data) { %>
<form action="/post/store" method="post" encType="multipart/form-data">
    <div class="card">
        <div class="card-header">
            <div class="card-title">
                <h4>Iklan</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="name">Judul</label>
                <input type="text" class="form-control" name="name" id="" placeholder="<%= data.title %> " readonly>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <div class="card-title">
                <h4>Deskripsi Iklan</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="location">Lokasi</label>
                <input type="text" class="form-control" name="location" id="" placeholder="<%= data.kost.location %>" readonly>
            </div>
            <div class="form-group">
                <label for="price">Harga</label>
                <input type="number" class="form-control" name="price" id="" placeholder="<%= data.kost.price %>" readonly>
            </div>
            <div class="form-group">
                <label for="room_type">Jenis Kost</label>
                <input type="text" class="form-control" name="room_type" id="" placeholder="<%= data.kost.room_type %>" readonly>
            </div>
            <div class="form-group">
                <label for="facilities">Fasilitas</label>
                <textarea class="form-control" name="facilities" id="" rows="3" readonly><%= data.kost.facilities %></textarea>
            </div>
            <div class="form-group">
                <label for="variety">Tipe Kost</label>
                <select class="form-control" name="variety" id="" disabled>
                <option <% if (data.kost.variety == 'Kamar Mandi Dalam') { %> selected <% }%>>Kamar Mandi Dalam</option>
                <option <% if (data.kost.variety == 'Kamar Mandi Luar') { %> selected <% }%>>Kamar Mandi Luar</option>
                </select>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <div class="card-title">
                <h4>Gambar</h4>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <img class="card-img-top" src="/../photos/<%= data.photo.cover %>" alt="">
                </div>
                <div class="col">
                    <img class="card-img-top" src="/../photos/<%= data.photo.imgOne %>" alt="">
                </div>
                <div class="col">
                    <img class="card-img-top" src="/../photos/<%= data.photo.imgTwo %>" alt="">
                </div>
                <div class="col">
                    <img class="card-img-top" src="/../photos/<%= data.photo.imgThree %>" alt="">
                </div>
            </div>
    </div>
</form>
<% } %>
<%- include('../../partials/footer'); %>